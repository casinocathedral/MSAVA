@page "/userinfo"
@inject HttpClient Http

<PageTitle>User Info</PageTitle>

<h1>User Info</h1>

@if (user == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <td>@user.Id</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>@user.Username</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>@user.CreatedAt</td>
        </tr>
        <tr>
            <th>Is Admin</th>
            <td>@user.IsAdmin</td>
        </tr>
        <tr>
            <th>Is Banned</th>
            <td>@user.IsBanned</td>
        </tr>
        <tr>
            <th>Is Whitelisted</th>
            <td>@user.IsWhitelisted</td>
        </tr>
    </table>
}

